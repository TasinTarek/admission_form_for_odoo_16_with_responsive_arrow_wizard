<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Tree View-->
        <record id="se_applicant_register_tree_view" model="ir.ui.view">
            <field name="name">se.applicant.register.tree</field>
            <field name="model">se.applicant.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Admission Register">
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="min_count"/>
                    <field name="max_count"/>
<!--                    <field name="product_id" invisible="1"/>-->
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--Form View-->
        <record id="se_applicant_register_form_view" model="ir.ui.view">
            <field name="name">se.applicant.register.form</field>
            <field name="model">se.applicant.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Admission Register">
                    <header groups="base.group_user">
                        <button name="confirm_register" states="draft" type="object" string="Confirm"
                                class="oe_highlight"/>
                        <button name="start_application" states="confirm" type="object" string="Start Application"
                                class="oe_highlight"/>
                        <button name="start_admission" states="application" type="object" string="Start Admission"
                                class="oe_highlight"/>
                        <button name="close_register" states="admission" type="object" string="Done"
                                class="oe_highlight"/>
                        <button name="cancel_register" states="draft,confirm" string="Cancel" type="object"/>
                        <button name="set_to_draft" states="cancel" string="Set to Draft" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,application,admission"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group col="4">
                            <field name="name"/>
                            <field name="course_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
<!--                            <field name="product_id" context="{'default_type': 'service'}"/>-->
                            <field name="min_count"/>
                            <field name="max_count"/>
                        </group>
                        <group string="Applications">
                            <field name="applicant_ids" nolabel="1" colspan="2" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Search View-->
        <record id="se_applicant_register_search_view" model="ir.ui.view">
            <field name="name">se.applicant.register.search</field>
            <field name="model">se.applicant.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Admission Register">
                    <field name="name"/>
                    <field name="course_id"/>
<!--                    <field name="product_id"/>-->
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Course" name="group_by_adm_reg_course_id"
                                domain="[]" context="{'group_by':'course_id'}"/>
<!--                        <filter string="Fees" name="group_by_adm_reg_product_id"-->
<!--                                domain="[]" context="{'group_by':'product_id'}"/>-->
                        <filter string="Status" name="group_by_adm_reg_state"
                                domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>



        <!--Graph View-->
        <record id="se_applicant_register_graph_view" model="ir.ui.view">
            <field name="name">se.applicant.register.graph</field>
            <field name="model">se.applicant.register</field>
            <field name="arch" type="xml">
                <graph string="Course By Admission Register">
                    <field name="course_id" type="row"/>
                    <field name="start_date"  interval="month" />
<!--                    <field name="product_id" type="measure"/>-->
                </graph>
            </field>
        </record>

        <record id="se_applicant_register_pivot_view" model="ir.ui.view">
            <field name="name">se.applicant.register.pivot</field>
            <field name="model">se.applicant.register</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <pivot string="Admission Register">
                    <field name="name"/>
                    <field name="course_id" type="row"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="min_count"/>
                    <field name="max_count"/>
                    <field name="state"/>
                </pivot>
            </field>
        </record>

        <!--Action-->
        <record id="se_applicant_register_action_view" model="ir.actions.act_window">
            <field name="name">Admission Registers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">se.applicant.register</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref="se_applicant_register_search_view"/>
        </record>

        <!--From View Action-->
        <record id="se_applicant_register_action_form_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="se_applicant_register_action_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="se_applicant_register_form_view"/>
        </record>

        <!--Tree View Action-->
        <record id="se_applicant_register_action_tree_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="se_applicant_register_action_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="se_applicant_register_tree_view"/>
        </record>
    </data>
</odoo>
